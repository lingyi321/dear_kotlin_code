<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_alignLeft="@id/card_head_txt"
                android:layout_alignRight="@id/card_head_txt"
                android:layout_alignBottom="@id/card_head_txt"
                android:background="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/card_head_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@android:color/black"/>
            <RelativeLayout
                android:id="@+id/card_head_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/card_head_txt">
                <ImageView
                    android:id="@+id/mvp_ima"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/total_platform_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/mvp_ima"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:text="@string/num"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/card_head_rl">
                <TextView
                    android:id="@+id/tit"
                    android:layout_marginStart="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:text="@string/title"/>
                <TextView
                    android:id="@+id/million_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tit"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:text="@string/num"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/desc_tv"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:padding="10dp"
        tools:text="@string/long_content"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:id="@+id/ll1"
        app:layout_constraintTop_toBottomOf="@id/desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/current_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/num"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/total_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/num"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="12dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tx1"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f2f2f2"
        android:layout_marginTop="10dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tx1"
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="16dp"
        android:text="@string/title"/>
</android.support.constraint.ConstraintLayout>